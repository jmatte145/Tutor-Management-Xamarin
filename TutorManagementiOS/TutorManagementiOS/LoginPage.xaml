<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorManagementiOS.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Label Text="Welcome to the Champlain Regional College Tutoring App!" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" />

            <Entry x:Name="txtUserName" Placeholder="Username" FontSize="Large"/>

            <Entry x:Name="txtPassword" Placeholder="Password" FontSize="Large" IsPassword="True"/>

            <Button x:Name="btnLogin" Text="Login" Font="large" BackgroundColor="LightBlue" Clicked="btnLogin_Clicked"/>

            <Button x:Name="btnRegister" Text="Register" Font="large" BackgroundColor="LightBlue" Clicked="btnRegister_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>