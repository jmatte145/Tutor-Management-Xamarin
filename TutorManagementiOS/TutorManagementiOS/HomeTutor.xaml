<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TutorManagementiOS.HomeTutor"
    Title="Tutor Page">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
           
            <BoxView HeightRequest="10"/> 

            <Button Text="Create Session" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#BF043055" Clicked="createSession"/>
            
            <Button Text="View Sessions" TextColor="White"  
                FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                BackgroundColor="#BF043055" Clicked="viewSession"/>


             <Button Text="Availabilities" TextColor="White"  
                 FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                 BackgroundColor="#BF043055" Clicked="modAvail"/>
            
            
                <Button Text="Logout" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#BF043055" Clicked="goLogin"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
