<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorManagementiOS.ViewSessionPage">
    <ContentPage.Content>
        <CollectionView x:Name="collectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ScrollView>
                        <StackLayout Orientation="Vertical" Padding="10" Spacing="10">
                            <BoxView HeightRequest="10"/>
                            <Frame BackgroundColor="#BF043055" HasShadow="False">
                                <StackLayout Orientation="Vertical" Spacing="10">
                                    <Grid Padding="5" RowDefinitions="Auto, *">
                                        <Label Grid.Row="0" Grid.Column="0" Text="Tutor ID:" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding tutorID}" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="1" Grid.Column="0" Text="Date:" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding date}" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="2" Grid.Column="0" Text="Students Attended:" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding sessionMembers}" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="3" Grid.Column="0" Text="Duration and Time:" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding time}" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="3" Grid.Column="2" Text="{Binding duration}" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="4" Grid.Column="0" Text="Grade:" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding grade}" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="5" Grid.Column="0" Text="Teacher Comment:" TextColor="White" FontSize="Small"/>
                                        <Label Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding report}" TextColor="White" FontSize="Small"/>
                                        <Button Grid.Row="6" Grid.Column="0" Text="{Binding sessionID}" Grid.ColumnSpan="3" TextColor="#BF043055" FontSize="Micro" Clicked="goDetail" />
                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </ScrollView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>